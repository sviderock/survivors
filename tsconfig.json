{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["vinxi/types/client", "node"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/convex/*": ["./convex/*"]
    }
  },
  "exclude": ["node_modules"]
}
